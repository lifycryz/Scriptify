<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <div class="flex h-screen">
    <!-- Sidebar -->
    <!-- Sidebar code here (same as before) -->

    <!-- Content -->
    <div class="flex-1 flex flex-col lg:pl-64">
      <header class="flex items-center justify-between bg-white shadow p-4">
        <h1 class="text-xl font-bold text-gray-700">Dashboard</h1>
      </header>

      <main class="flex-1 p-6 bg-gray-100">
        <div class="bg-white shadow p-6 rounded-lg">
          <h2 class="text-2xl font-bold mb-4">Uploaded Files</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% files.forEach(file => { %>
              <div class="bg-gray-50 p-4 rounded-lg shadow">
                <h3 class="text-xl font-semibold text-gray-800"><%= file.name %></h3>
                <p class="text-gray-600"><%= file.description %></p>
                <p class="text-gray-500 text-sm">Category: <%= file.category %></p>
                <a href="/uploads/<%= file.fileName %>" class="text-blue-600 underline">Download</a>
                <div class="mt-4 flex justify-between">
                  <a href="/files/edit/<%= file._id %>" class="text-indigo-600">Edit</a>
                  <a href="/files/delete/<%= file._id %>" class="text-red-600">Delete</a>
                </div>
              </div>
            <% }); %>
          </div>
        </div>
      </main>
    </div>
  </div>

</body>
</html>